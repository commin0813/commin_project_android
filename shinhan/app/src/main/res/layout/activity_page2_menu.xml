                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/textview_button"
                                android:clickable="true"
                                android:text="이용한도조회"
                                android:textColor="@color/comminGray62"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/textview_button"
                                android:clickable="true"
                                android:text="이용한도 상향신청"
                                android:textColor="@color/comminGray62"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/textview_button"
                                android:clickable="true"
                                android:text="이용한도 하향신청"
                                android:textColor="@color/comminGray62"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/textview_button"
                                android:clickable="true"
                                android:text="추가한도이용"
                                android:textColor="@color/comminGray62"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/textview_button"
                                android:clickable="true"
                                android:text="한도상향 안내동의"
                                android:textColor="@color/comminGray62"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/textview_button"
                                android:clickable="true"
                                android:text="카드별 이용한도관리"
                                android:textColor="@color/comminGray62"
                                android:textSize="16sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="내정보관리"
                                android:textColor="@color/comminBlack0D"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/textview_button"
                                android:clickable="true"
                                android:text="내카드관리"
                                android:textColor="@color/comminGray62"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/textview_button"
                                android:clickable="true"
                                android:text="회원정보변경"
                                android:textColor="@color/comminGray62"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/textview_button"
                                android:clickable="true"
                                android:text="결제계좌변경"
                                android:textColor="@color/comminGray62"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/textview_button"
                                android:clickable="true"
                                android:text="결제일변경"
                                android:textColor="@color/comminGray62"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/textview_button"
                                android:clickable="true"
                                android:text="결제일변경 이력조회"
                                android:textColor="@color/comminGray62"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/textview_button"
                                android:clickable="true"
                                android:text="명세서수령방법변경"
                                android:textColor="@color/comminGray62"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/textview_button"
                                android:clickable="true"
                                android:text="온라인회원 탈퇴"
                                android:textColor="@color/comminGray62"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="알림함"
                                android:textColor="@color/comminBlack0D"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
