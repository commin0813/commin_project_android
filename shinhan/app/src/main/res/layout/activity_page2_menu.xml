                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/textview_button"
                                android:clickable="true"
                                android:text="분할납부[할부전환]서비스"
                                android:textColor="@color/comminGray62"
                                android:textSize="16sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="이용금액결제"
                                android:textColor="@color/comminBlack0D"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/textview_button"
                                android:clickable="true"
                                android:text="건별선결제"
                                android:textColor="@color/comminGray62"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/textview_button"
                                android:clickable="true"
                                android:text="당월청구액선결제"
                                android:textColor="@color/comminGray62"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/textview_button"
                                android:clickable="true"
                                android:text="연체금액/결제일당일결제"
                                android:textColor="@color/comminGray62"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/textview_button"
                                android:clickable="true"
                                android:text="결제처리결과조회"
                                android:textColor="@color/comminGray62"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/textview_button"
                                android:clickable="true"
                                android:text="당일결제잔액조회"
                                android:textColor="@color/comminGray62"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/textview_button"
                                android:clickable="true"
                                android:text="입금내역조회"
                                android:textColor="@color/comminGray62"
                                android:textSize="16sp" />

                            <TextView
